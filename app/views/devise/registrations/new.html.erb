<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :department %><br />
    <%= f.text_field :department, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :institution_id, "I belong to the following institution: "%>
    <%= f.select(:institution_id, Institution.all.order(:name).map{|u| [u.name, u.id]}.unshift([nil, nil]), {}) %>

    <p>If you don't see your institution, double-check your spelling and then type your institution's full name without abbreviation and with proper capitalization and then click the create link which will appear in the select menu.</p>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>

<% end %>

<%= render "institution_select.js" %>

